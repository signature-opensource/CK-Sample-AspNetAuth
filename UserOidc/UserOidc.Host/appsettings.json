{
  // The secrets "Authentication:Oidc.Signature:ClientSecret" and "Authentication:Oidc.Google:ClientSecret"
  // must be in the user-secrets of this application. 
  "Authentication": {
    "Oidc.Signature": {
      "ClientId": ""
    },
    "Oidc.Google": {
      "ClientId": ""
    }
  },

  "Logging": {
    "LogLevel": {
      "Default": "Warning"
    }
  },

  "CK-Monitoring": {
    "GlobalDefaultFilter": "Debug",
    "GrandOutput": {
      "Handlers": {
        "Console": true,
        "TextFile": {
          "Path": "Text"
        }
      }
    }
  }
}
